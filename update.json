{
  "type": "Scaffold",
  "appBar": {
    "type": "AppBar",
    "title": {
      "type": "Text",
      "data": "Dynamic AppBar"
    }
  },
  "body": {
    "type": "Column",
    "children": [
      {
        "type": "Text",
        "data": "Hello, Flutter!",
        "style": {
          "fontSize": 24,
          "color": "0xFF000000"
        }
      },
      {
        "type": "Padding",
