        "child": {
          "type": "Text",
          "data": "This is dynamically loaded from JSON."
        }
      },
      {
        "type": "Container",
        "color": "0xFF0000FF",
        "child": {
          "type": "Text",
          "data": "Inside a blue container!"
        }
      }
    ]
  }
}
